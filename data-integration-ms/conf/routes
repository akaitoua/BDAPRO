
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

#Dataset
GET     /api/datasets                   controllers.DatasetController.index
GET     /api/dataset/:id                controllers.DatasetController.read(id: String)
POST    /api/dataset                    controllers.DatasetController.upload
PUT     /api/dataset/:id                controllers.DatasetController.update(id: String)
DELETE  /api/dataset/:id                controllers.DatasetController.delete(id: String)

#Integrations
GET     /api/integrations               controllers.IntegrationController.index
GET     /api/integration/:id            controllers.IntegrationController.read(id: String)
POST    /api/integration                controllers.IntegrationController.upload
PUT     /api/integration                controllers.IntegrationController.update(id: String)
DELETE  /api/integration/:id            controllers.IntegrationController.delete(id: String)

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count

# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

      